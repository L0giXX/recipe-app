generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Benutzer {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  gender    String
  name      String
  password  String
  surname   String
  telephone String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String
}

model Recipe {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  ingredients  String
  instructions String
  image        String // ???
}
