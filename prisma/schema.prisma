generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  password String
}

model Recipe {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  ingredients  String[]
  instructions String[]
  cookTime     String
  imageURL     String
}
